<%if(success && success.length){%>
<div
  class="alert alert-success alert-dismissible fade show col-sm-12 col-md-12 col-lg-4 m-auto"
  role="alert"
>
  <%=success%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%> <%if(error && error.length){%>
    
<div
  class="alert alert-danger alert-dismissible fade show col-sm-12 col-md-12 col-lg-4 m-auto"
  role="alert"
>
  <%=error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%>
